source 'https://rubygems.org'


# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.5'
# Use mysql as the database for Active Record
gem 'sass-rails', '~> 4.0.3'
# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'
# See https://github.com/sstephenson/execjs#readme for more supported runtimes
# Use jquery as the JavaScript library
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'
# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0',          group: :doc
# Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
gem 'spring',        group: :development
gem 'foundation-rails'
gem 'angularjs-rails'



group :development do
  gem 'capistrano'
  gem 'capistrano-rails'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
end


group :development do
  # Pretty print your Ruby objects with style -- in full color and with proper indentation. Read more: http://github.com/michaeldv/awesome_print
  gem 'awesome_print'
  # A mini view framework for console/irb that's easy to use, even while under its influence. Console goodies include a no-wrap table, auto-pager, tree and menu. Read more: http://tagaholic.me/hirb/, http://tagaholic.me/hirb/doc/
  gem 'hirb'
  # interactive editor in irb http://vimcasts.org/episodes/running-vim-within-irb/ Read more: https://github.com/jberkel/interactive_editor
  gem 'interactive_editor'
end

# A thin and fast web server Read more: http://code.macournoyer.com/thin/
gem 'thin', :group => :development


# Bundler-like DSL + rake tasks for Bower on Rails. Read more: https://github.com/42dev/bower-rails
gem 'bower-rails'
# Use your angular templates with rails' asset pipeline. Read more: https://github.com/pitr/angular-rails-templates
gem 'angular-rails-templates'


# Ruby ODM framework for MongoDB. Read more: http://mongoid.org
gem 'mongoid'


# Flexible authentication solution for Rails with Warden. http://blog.plataformatec.com.br/tag/devise/
gem 'devise'
